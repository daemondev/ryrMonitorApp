<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomHintDisabled" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomHintEnabled" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:gravity">left</item>
    </style>


    <!--<style name="CustomHintDisabled" parent="ThemeOverlay.AppCompat.Light">-->
        <!--<item name="colorPrimary">@color/colorYellow</item>-->
    <!--</style>-->

    <!--<style name="CustomHintEnabled" parent="ThemeOverlay.AppCompat.Light">-->
        <!--<item name="colorPrimary">@color/colorYellow</item>-->
    <!--</style>-->

</resources>
