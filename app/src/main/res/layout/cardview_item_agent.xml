<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_agent_id"
    android:layout_width="60dp"
    android:layout_height="101dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/agent_img_status"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="#2d2d2d" />

        <TextView
            android:id="@+id/agent_id"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Agent Title"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="#2d2d2d"/>

        <TextView
            android:id="@+id/agent_calling_number"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Phone"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="#2d2d2d"/>
        <TextView
            android:id="@+id/agent_calltype"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Call Type"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="#2d2d2d"/>

        <TextView
            android:id="@+id/agent_call_rank"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Call Rank"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="#2d2d2d"/>

    </LinearLayout>

</android.support.v7.widget.CardView>